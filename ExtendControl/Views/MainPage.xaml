<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    xmlns:views="clr-namespace:ExtendControl.Views"
    mc:Ignorable="d"
    x:Class="ExtendControl.Views.MainPage"
    Title="ExtendControl">
    <ScrollView>
        <StackLayout
            Margin="10">

            <!-- RDatePickerエリア -->
            <Frame
                Padding="10"
                HasShadow="False"
                BorderColor="Gray">
                <StackLayout>

                    <!-- タイトル＆説明エリア -->
                    <Label
                        Text="RDatePicker"
                        FontSize="Large"
                        FontAttributes="Bold" />
                    <Label
                        Text="日付範囲選択ピッカー。&#xA;選択可能日付範囲および初期選択日はConfigプロパティで指定する。Configプロパティによる選択肢変更では変更確認イベントは発生しない。"
                        Margin="0,0,0,10"
                        FontSize="Micro" />

                    <!-- Configプロパティエリア -->
                    <Frame
                        Padding="10"
                        HasShadow="False"
                        BorderColor="LightGray">
                        <StackLayout
                            HorizontalOptions="FillAndExpand">

                            <!-- タイトル ＆ 適用ボタン -->
                            <StackLayout
                                Orientation="Horizontal"
                                HorizontalOptions="FillAndExpand">
                                <Label
                                    Text="Configプロパティ"
                                    FontAttributes="Bold"
                                    VerticalOptions="Center" />

                                <Button
                                    Text="適用"
                                    Command="{Binding ApplyCｍd}"
                                    VerticalOptions="Center"
                                    HorizontalOptions="EndAndExpand" />

                            </StackLayout>

                            <!-- 選択可能過去日付 -->
                            <StackLayout
                                Orientation="Horizontal">
                                <Label
                                    Text="{Binding Source={x:Reference StepperPast}
                                            , Path=Value
                                            , StringFormat='選択可能過去日数：{0}'}"
                                    VerticalOptions="Center" />
                                <Stepper
                                    x:Name="StepperPast"
                                    Value="{Binding PastDays.Value}"
                                    Increment="1" />
                            </StackLayout>

                            <!-- 選択可能過去日付 -->
                            <StackLayout
                                Orientation="Horizontal">

                                <Label
                                    Text="{Binding Source={x:Reference StepperFuture}
                                        , Path=Value
                                        , StringFormat='選択可能未来日数：{0}'}"
                                    VerticalOptions="Center" />
                                <Stepper
                                    x:Name="StepperFuture"
                                    Value="{Binding FutureDays.Value}"
                                    Increment="1" />
                            </StackLayout>

                            <Grid>

                                <!-- 範囲基準日 -->
                                <Label
                                    Grid.Column="0"
                                    Grid.Row="0"
                                    Text="選択範囲基準日"
                                    VerticalOptions="Center" />
                                <DatePicker
                                    Grid.Column="1"
                                    Grid.Row="0"
                                    Format="yyyy/MM/dd"
                                    Date="{Binding StandardDate.Value}" />

                                <!-- 初期選択日 -->
                                <Label
                                    Grid.Column="0"
                                    Grid.Row="1"
                                    Text="初期選択日"
                                    VerticalOptions="Center" />
                                <DatePicker
                                    Grid.Column="1"
                                    Grid.Row="1"
                                    Format="yyyy/MM/dd"
                                    Date="{Binding InitialDate.Value}"/>
                            </Grid>
                        </StackLayout>
                    </Frame>

                    <!-- RDatePicker -->
                    <StackLayout
                        Orientation="Horizontal">
                        <Label
                            Text="RDatePicker -> "
                            FontAttributes="Bold"
                            VerticalOptions="Center" />
                        <views:RDatePicker
                            x:Name="MyRDatePicker"
                            HorizontalOptions="FillAndExpand"
                            ios:Picker.UpdateMode="WhenFinished"
                            Config="{Binding RDatePickerDateAtt.Value}"
                            SelectedItem="{Binding RDatePickerDateSelectedItem.Value}"
                            ItemDisplayBinding="{Binding ., StringFormat='{0:M/d}'}" />
                    </StackLayout>

                    <!-- RDatePickerのSelectedItemプロパティ値表示エリア -->
                    <Label
                        HorizontalOptions="End"
                        Text="{Binding Source={x:Reference MyRDatePicker}
                                , Path=SelectedItem
                                , StringFormat='SelectedItem={0:yyyy/M/d H:mm:ss}'
                                , FallbackValue='error!'}" />

                    <!-- RDatePickerのSelectedIndexプロパティ値表示エリア -->
                    <Label
                        HorizontalOptions="End"
                        Text="{Binding Source={x:Reference MyRDatePicker}
                                , Path=SelectedIndex
                                , StringFormat='SelectedIndex={0}'
                                , FallbackValue='error!'}" />

                    <!-- RDatePickerのSelectedItem設定 -->
                    <StackLayout
                        Orientation="Horizontal"
                        Margin="0,10,0,0">
                        <Label
                            VerticalTextAlignment="Center"
                            Text="外部からの選択肢設定" />
                        <DatePicker
                            HorizontalOptions="EndAndExpand"
                            Format="yyyy/M/d"
                            ios:Picker.UpdateMode="WhenFinished"
                            Date="{Binding RDatePickerDateSelectedItem.Value}" />
                    </StackLayout>
                    <Label
                        FontSize="Micro"
                        Text="SelectedItemを設定する。&#xA;PickerのSelectedItemは選択肢にない項目も設定できてしまう。&#xA;選択肢にないSelectedItemを指定した場合、SelectedIndexは-1になる。" />
                </StackLayout>
            </Frame>

            <!-- 拡張した日付選択ピッカー -->
            <Frame
                IsVisible="false"
                HasShadow="False"
                BorderColor="Gray">
                <StackLayout>

                    <Label
                        Text="DateListPicker"
                        FontSize="Large"
                        FontAttributes="Bold" />

                    <views:DateListPicker
                        x:Name="MyDatePicker"
                        ios:Picker.UpdateMode="WhenFinished"
                        DateRange="{Binding DateRangeProp.Value}"
                        SelectedItem="{Binding SelectedDate.Value}" />

                    <Button
                        Text="今日"
                        Command="{Binding TodayCmd}" />

                    <Button
                        Text="今日(強制)"
                        Clicked="OnTodayClicked" />

                    <Button
                        Text="選択日付の表示"
                        Command="{Binding ShowCmd}" />

                </StackLayout>
            </Frame>

            <!-- UndoablePicker -->
            <Frame
                Padding="10"
                HasShadow="False"
                BorderColor="Gray">
                <StackLayout>
                    <Label
                        Text="UndoablePicker"
                        Margin="0,0,0,10"
                        FontSize="Large"
                        FontAttributes="Bold" />

                    <views:UndoablePicker
                        x:Name="MyUndoablePicker"
                        ios:Picker.UpdateMode="WhenFinished">
                        <views:UndoablePicker.Items>
                            <x:String>1st</x:String>
                            <x:String>2nd</x:String>
                            <x:String>3rd</x:String>
                            <x:String>4th</x:String>
                            <x:String>5th</x:String>
                        </views:UndoablePicker.Items>
                    </views:UndoablePicker>

                    <Button
                        Text="リセット"
                        Clicked="OnResetClicked" />

                    <Button
                        Text="確認"
                        x:Name="ConfirmButton" />
                </StackLayout>
            </Frame>

        </StackLayout>
    </ScrollView>
</ContentPage>